:root {
  --background: #FAFAFA;
  --foreground: #0C0C0C;
}
@media screen and (prefers-color-scheme: dark) {
  :root {
    --background: #0C0C0C;
    --foreground: #FAFAFA;
  }  
}
body {
  font-size: 100%;
  font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
  margin: 0;
  padding: 0;
  background-color: var(--background);
  color: var(--foreground);
}

header div {
  width: 90vw;
  max-width: 1200px;
  margin: 0 auto;
  padding: 1rem 0;
}
h1 {
  font-size: 1.5rem;
}
h4 {
  border-bottom: 2px solid var(--foreground);
}
main {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  width: 90vw;
  max-width: 1200px;
  margin: 2rem auto;
}
main #intro{
  margin-bottom: 4rem;
  padding-bottom: 1rem;
  border-bottom: 2px solid var(--foreground)
}
main aside {
  display: block;
  min-width: 300px;
  max-width: 300px;
  padding-right: 2rem;
}
p {
  line-height: 1.5rem;
}
code {
  font-family: 'Courier New', Courier, monospace;
  font-weight: 600;
  font-size: 1.25rem;
}
ul {
  list-style-type: none;
  margin: 0 0 0 1rem;
  padding: 0
}
form * {
  font-size: 1.5rem;
}
aside form label {
  display: flex;
  justify-content: space-between;
}
input[type=number] {
  appearance: none;
  -moz-appearance: textfield;
  -webkit-appearance: textfield;
  width: 3rem;
  padding: 0 0.5rem;
  border: 1px solid var(--foreground);
  background-color: var(--background);
  border-radius: 0;
  color: var(--foreground);
}
input::-webkit-outer-spin-button,
input::-webkit-inner-spin-button {
  -webkit-appearance: none;
}
input[type="radio"] {
  background-color: var(--foreground);
  border-radius: 0;
  cursor: pointer;
  display: inline-block;
  height: 1.25rem;
  margin-right: 1rem;
  position: relative;
  width: 1.25rem;
  -webkit-appearance: none;
  appearance: none;
  -moz-appearance: none;
}
input[type="radio"]:after {
  background-color: var(--foreground);
  border-radius: 0;
  content: '';
  display: block;
  height: 0.75rem;
  left: 0.25rem;
  position: relative;
  top: 0.25rem;
  width: 0.75rem;
}
input[type="radio"]:checked:after {
  background-color: var(--background);
}
input[type=radio]:focus {
  background-color: transparent;
}
input[type=radio]:focus:after {
  background-color: var(--foreground);
}
button {
  background-color: var(--background);
  color: var(--foreground);
  border: 2px solid var(--foreground);
  padding: 0.5rem 0.6rem;
}
button:hover,
button:active {
  background-color: var(--foreground);
  color: var(--background);
}
p#result {
  font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
}
input[type=number]:focus {
  border-color: transparent;
}
:focus {
  outline-offset: 0;
  border-color: transparent;
  outline-style: dashed;
  outline-width: 2px;
  outline-color: var(--foreground);
}

@media screen and (max-width: 767px) {
  main {
    display: block;
  }
  main aside {
    display: flex;
    flex-direction: row-reverse;
    max-width: unset;
    padding-right: unset;
  }
  aside div {
    width: 50%;
  }
  form {
    padding-right: 1rem;
  }
}

@media screen and (max-width: 500px) {
  main aside {
    display: block;
  }
  aside div {
    width: 100%
  }
}

a {
  color: var(--foreground);
  text-decoration: underline;
}
a:hover,
a:active {
  text-decoration: dashed underline;
}
nav {
  width: 90vw;
  max-width: 1200px;
  margin: 1rem auto;
  text-align: right;
}
header a {
  text-decoration: none;
}
